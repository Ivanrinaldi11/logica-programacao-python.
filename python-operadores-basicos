n1 = int(input('Digite um valor: '))
n2 = int(input('Digite outro valor: '))

s = n1 + n2
m = n1 * n2
e = n1 ** n2

if n2 != 0:
    d = n1 / n2
    di = n1 // n2
else:
    d = 'indefinida (divisão por zero)'
    di = 'indefinida (divisão por zero)'

print(f'A soma é {s}')
print(f'O produto é {m}')
print(f'A divisão é {d}')
print(f'Divisão inteira: {di}')
print(f'Potência: {e}')
